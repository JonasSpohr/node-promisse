<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Funcionários</h2>
        <ol class="breadcrumb">
            <li>
                <a href="#/home">Home</a>
            </li>
            <li class="active">
                <strong>Funcionários</strong>
            </li>
        </ol>
    </div>
</div>
<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Funcionários cadastrados</h5>
                </div>
                <div class="ibox-content">
                    <div class="row">
                        <div class="col-md-12">
                            <button class="btn btn-sm btn-success pull-right" ng-show="isAdmin" ng-click="new()">Cadastrar</button>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <table class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>Nome</th>
                                        <th class="hidden-xs">Email</th>
                                        <th>Telefone</th>
                                        <th class="hidden-xs">Ativo</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr ng-repeat="e in items">
                                        <td>{{e.name}}</td>
                                        <td class="hidden-xs">{{e.email}}</td>
                                        <td>{{e.phone}}</td>
                                        <td class="hidden-xs">{{e.active == 0 ? 'Não' : 'Sim'}}</td>
                                        <td style="text-align: center">
                                            <button class="btn btn-xs btn-success" ng-show="isAdmin" ng-disabled="isProcessing" ng-click="edit(e._id)">Editar</button>
                                            <button class="btn btn-xs btn-success" ng-show="!isAdmin" ng-disabled="isProcessing" ng-click="edit(e._id)">Visualizar</button>
                                            <button class="btn btn-xs btn-danger" ng-show="isAdmin" ng-disabled="isProcessing || MyId == e._id" ng-click="delete(e._id)">Excluir</button>
                                        </td>
                                    </tr>
                                    <tr ng-show="items.length == 0 && !isLoading">
                                        <td colspan="5">Sem resultados</td>
                                    </tr>
                                    <tr ng-show="isLoading">
                                        <td colspan="5">Consultando...</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>