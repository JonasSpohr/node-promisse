<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Fornecedores</h2>
        <ol class="breadcrumb">
            <li>
                <a href="#/home">Home</a>
            </li>
            <li>
                <a href="#/providers">Fornecedores</a>
            </li>
            <li class="active">
                <strong>Fornecedor</strong>
            </li>
        </ol>
    </div>
</div>
<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Dados do fornecedor</h5>
                </div>
                <div class="ibox-content">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Razão social</label>
                                <input type="text" class="form-control" ng-model="Provider.razaoSocial" placeholder="Razão social">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Nome fantasia</label>
                                <input type="text" class="form-control" ng-model="Provider.fantasiName" placeholder="Nome fantasia">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Email</label>
                                <input type="text" class="form-control" ng-model="Provider.email" placeholder="Email">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>CNPJ</label>
                                <input type="text" class="form-control" ng-model="Provider.cnpj" placeholder="CNPJ" mask="99.999.999/9999-99">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Inscrição estadual</label>
                                <input type="text" class="form-control" ng-model="Provider.inscricaoEstadual" placeholder="Inscrição estadual">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Inscrição municipal</label>
                                <input type="text" class="form-control" ng-model="Provider.inscricaoMunicipal" placeholder="Inscrição municipal">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Telefone comercial</label>
                                <input type="text" class="form-control" ng-model="Provider.phone" placeholder="Telefone" mask="(99) 9999-9999">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>Descrição prestação de serviço</label>
                                <textarea rows="4" class="form-control" ng-model="Provider.descriptionSevice" placeholder="Descrever a prestação de serviço oferecida pelo fornecedor"></textarea>
                            </div>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Logradouro</label>
                                <input type="text" class="form-control" ng-model="Provider.address.street" placeholder="Logradouro">
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label>Número</label>
                                <input type="text" class="form-control" ng-model="Provider.address.number" placeholder="Número">
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label>Complemento</label>
                                <input type="text" class="form-control" ng-model="Provider.address.complement" placeholder="Complemento">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Cidade</label>
                                <input type="text" class="form-control" ng-model="Provider.address.city" placeholder="Cidade">
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label>Estado</label>
                                <input type="text" class="form-control" ng-model="Provider.address.state" placeholder="Estado">
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label>CEP</label>
                                <input type="text" class="form-control" ng-model="Provider.address.zipCode" placeholder="CEP" mask="99999-999">
                            </div>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-md-12">
                            <a href="#/providers" class="btn btn-sm btn-default pull-right" ng-disabled="isProcessing" style="margin-left: 10px">Voltar</a>
                            <button class="btn btn-sm btn-danger pull-right" ng-disabled="isProcessing" ng-show="Provider._id != undefined && isAdmin" style="margin-left: 10px" ng-click="delete()">Excluir</button>
                            <button class="btn btn-sm btn-success pull-right" ng-disabled="isProcessing" ng-show="isAdmin" ng-click="save()">Salvar</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>